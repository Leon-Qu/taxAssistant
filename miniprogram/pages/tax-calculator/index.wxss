/* pages/tax-calculator/index.wxss */
.container {
  padding: 20rpx;
  background-color: #f6f6f6;
  min-height: 100vh;
}

.header {
  width: 100%;
  background-color: #fff;
  padding: 40rpx 24rpx;
  border-radius: 12rpx;
  margin: 0 0 20rpx 0;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
  position: relative;
  display: flex;
  flex-direction: column;
  align-items: flex-end;
  box-sizing: border-box;
}

.title {
  font-size: 44rpx;
  font-weight: 600;
  color: #333;
  text-align: center;
  margin-bottom: 30rpx;
  width: 100%;
}

.mode-switch {
  display: flex;
  border-radius: 8rpx;
  overflow: hidden;
  border: 1rpx solid #07C160;
  min-width: 240rpx;
}

.mode-item {
  flex: 1;
  text-align: center;
  padding: 10rpx 16rpx;
  font-size: 24rpx;
  color: #07C160;
  background-color: #fff;
  transition: all 0.3s ease;
}

.mode-item.active {
  background-color: #07C160;
  color: #fff;
}

.form-container {
  padding-bottom: 40rpx;
}

.form-section {
  background-color: #fff;
  border-radius: 12rpx;
  padding: 30rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
}

.family-info-container {
  display: flex;
  justify-content: space-between;
  margin-bottom: 20rpx;
  background-color: #fff;
  border-radius: 12rpx;
  padding: 20rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
}

.family-member-section {
  width: 48%;
  background-color: #fafafa;
  border-radius: 8rpx;
  padding: 20rpx;
  position: relative;
}

.family-member-section:first-child::after {
  content: '';
  position: absolute;
  right: -20rpx;
  top: 50%;
  transform: translateY(-50%);
  width: 2rpx;
  height: 80%;
  background: linear-gradient(to bottom, transparent, #e0e0e0, transparent);
}

.family-member-section .form-item {
  flex-direction: column;
  align-items: flex-start;
  margin-bottom: 15rpx;
}

.family-member-section .label {
  margin-bottom: 10rpx;
  color: #666;
  font-size: 28rpx;
}

.family-member-section .input {
  width: 100%;
  background-color: #fff;
  border-radius: 6rpx;
  padding: 8rpx;
  height: 48rpx;
  box-sizing: border-box;
}

