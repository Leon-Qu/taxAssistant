/* pages/tax-calculator/index.wxss */
.container {
  padding: 20rpx;
  background-color: #f6f6f6;
  min-height: 100vh;
}

.header {
  background-color: #fff;
  padding: 30rpx;
  border-radius: 12rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
}

.title {
  font-size: 36rpx;
  font-weight: bold;
  text-align: center;
  margin-bottom: 30rpx;
  color: #333;
}

.mode-switch {
  display: flex;
  justify-content: center;
  border-radius: 8rpx;
  overflow: hidden;
  border: 1rpx solid #07C160;
  width: 80%;
  margin: 0 auto;
}

.mode-item {
  flex: 1;
  text-align: center;
  padding: 16rpx 0;
  font-size: 28rpx;
  color: #07C160;
  background-color: #fff;
}

.mode-item.active {
  background-color: #07C160;
  color: #fff;
}

.form-container {
  padding-bottom: 40rpx;
}

.form-section {
  background-color: #fff;
  border-radius: 12rpx;
  padding: 30rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
}

/* 家庭信息并排布局容器 */
.family-info-container {
  display: flex;
  justify-content: space-between;
  margin-bottom: 20rpx;
}

/* 家庭成员信息区块样式 */
.family-member-section {
  width: 48%;
}

.section-title {
  font-size: 32rpx;
  font-weight: bold;
  margin-bottom: 20rpx;
  color: #333;
  border-left: 8rpx solid #07C160;
  padding-left: 20rpx;
}

.form-item {
  display: flex;
  flex-direction: row;
  align-items: center;
  padding: 16rpx 0;
  border-bottom: 1rpx solid #eee;
}

.label {
  width: 200rpx;
  font-size: 28rpx;
  color: #666;
  margin-bottom: 0;
}

.input {
  flex: 1;
  height: 60rpx;
  font-size: 28rpx;
  color: #333;
  padding: 0 20rpx;
}

.info-icon {
  width: 36rpx;
  height: 36rpx;
  margin-left: 10rpx;
}

.form-item:last-child {
  border-bottom: none;
}

.label {
  width: 220rpx;
  font-size: 28rpx;
  color: #666;
}

.label-with-icon {
  display: flex;
  align-items: center;
  width: 220rpx;
}

.info-icon {
  width: 32rpx;
  height: 32rpx;
  margin-left: 10rpx;
}

.input {
  flex: 1;
  height: 60rpx;
  font-size: 28rpx;
  color: #333;
  padding: 0 20rpx;
}

.button-group {
  display: flex;
  justify-content: space-between;
  margin: 30rpx 0;
  padding: 0 20rpx;
}

.btn {
  width: 45%;
  height: 80rpx;
  line-height: 80rpx;
  text-align: center;
  border-radius: 8rpx;
  font-size: 30rpx;
  display: flex;
  justify-content: center;
  align-items: center;
}

.btn-primary {
  background-color: #07C160;
  color: #fff;
}

.btn-secondary {
  background-color: #f5f5f5;
  color: #666;
  border: 1rpx solid #ddd;
}

.result-container {
  background-color: #fff;
  border-radius: 12rpx;
  padding: 30rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
}

.result-title {
  font-size: 32rpx;
  font-weight: bold;
  margin-bottom: 20rpx;
  color: #333;
  text-align: center;
}

.result-item {
  display: flex;
  justify-content: space-between;
  padding: 16rpx 0;
  border-bottom: 1rpx solid #eee;
}

.result-item:last-child {
  border-bottom: none;
}

.result-label {
  font-size: 28rpx;
  color: #666;
}

.result-value {
  font-size: 28rpx;
  color: #333;
  font-weight: bold;
}

.bonus-result {
  margin-top: 20rpx;
}

.plan-comparison {
  display: flex;
  justify-content: space-between;
  margin: 20rpx 0;
}

.plan-item {
  width: 48%;
  background-color: #f9f9f9;
  border-radius: 8rpx;
  padding: 20rpx;
  position: relative;
  border: 2rpx solid transparent;
}

.optimal-plan-item {
  border: 2rpx solid #07C160;
  background-color: rgba(7, 193, 96, 0.05);
}

.plan-title {
  font-size: 28rpx;
  font-weight: bold;
  margin-bottom: 16rpx;
  color: #333;
  text-align: center;
}

.plan-detail {
  display: flex;
  flex-direction: column;
}

.plan-detail text {
  font-size: 24rpx;
  color: #666;
  margin-bottom: 8rpx;
}

.optimal-badge {
  position: absolute;
  top: -10rpx;
  right: -10rpx;
  background-color: #07C160;
  color: #fff;
  font-size: 22rpx;
  padding: 4rpx 12rpx;
  border-radius: 16rpx;
  box-shadow: 0 2rpx 6rpx rgba(0, 0, 0, 0.1);
}

.tax-saving {
  display: flex;
  justify-content: space-between;
  padding: 16rpx 0;
  border-top: 1rpx solid #eee;
  margin-top: 16rpx;
}

.saving-label {
  font-size: 28rpx;
  color: #666;
}

.saving-value {
  font-size: 28rpx;
  color: #07C160;
  font-weight: bold;
}

.tax-explanation {
  margin-top: 16rpx;
  padding-top: 16rpx;
  border-top: 1rpx dashed #eee;
  text-align: center;
}

.explanation-text {
  font-size: 24rpx;
  color: #999;
}